<script>
$(document).ready(function(e) {
    //$('.bb_accordion').accordion();
	
	// intialization of the FAQ accordion menu
	
	$(".faq_menu > li").click(function(){
	
		if(false == $(this).next().is(':visible')) {
			$('.faq_menu > ul').slideUp(300);
				
		}
		$(this).next().slideToggle(300);
		
		$(".faq_menu > li").removeClass("current");
		$(this).addClass("current");
		
	});
	
	$('.faq_menu li:eq(0)').addClass("current").next('ul').show();
	
	// Intialize the accordion
	$(".bb_accordion-section").hide();
	
	$(".bb_accordion> li > h3").click(function(){
	
		if(false == $(this).next(".bb_accordion-section").is(':visible')) {
			$('.bb_accordion-section').slideUp(300);
				
		}
		$(this).next(".bb_accordion-section").slideToggle(300);
		
		$(".bb_accordion> li > h3").removeClass("bb_accordion-selected");
		$(this).addClass("bb_accordion-selected");
		
	});
	
	$('.bb_accordion li:eq(0)').find("h3").addClass("bb_accordion-selected").next('.bb_accordion-section').show();
	

	
	// showing and hide sections when clicking on the topic menu
	$(".faq_sections").hide();
	$(".faq_sections:eq(0)").show();
	$(".faq_menu .menu_sublevel li a").click(function(e) {
        $link_id=$(this).attr("href"), $this=$(this);
		// add active class to the link
		$(".faq_menu .menu_sublevel li").removeClass("active");
		$this.parent().addClass("active");
		
		// showing the sections
		$(".faq_sections").hide().find("h3").removeClass("bb_accordion-selected").next(".bb_accordion-section").hide();
		$($link_id).fadeIn(300).find('.bb_accordion li:eq(0)').find("h3").addClass("bb_accordion-selected").next('.bb_accordion-section').show();
		return false;
    });
	
	

});

</script>
