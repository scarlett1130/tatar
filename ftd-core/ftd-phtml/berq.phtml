        $('<p class="tooltip"></p>')
		.html(title)
        .appendTo('body')
        .fadeIn('slow');
    }, function() {
        // Hover out
        $(this).attr('title', $(this).data('tipText'));
        $('.tooltip').remove();
    }).mousemove(function(e) {
        var mousey = e.pageY + 0;
        var mousex = e.pageX + -75;
        $('.tooltip')
        .css({ top: mousey, left: mousex })
    });

});


 
